{
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "properties": {
    "nameOverride": {
      "type": "string",
      "default": ""
    },
    "fullnameOverride": {
      "type": "string",
      "default": ""
    },
    "replicaCount": {
      "type": "integer",
      "default": 1,
      "minimum": 1
    },
    "image": {
      "type": "object",
      "properties": {
        "repository": {
          "type": "string",
          "default": "sonatype/nexus3"
        },
        "tag": {
          "type": "string",
          "default": ""
        },
        "pullPolicy": {
          "type": "string",
          "enum": ["Always", "IfNotPresent", "Never"],
          "default": "IfNotPresent"
        }
      },
      "required": ["repository"]
    },
    "resources": {
      "type": "object",
      "properties": {
        "requests": {
          "type": "object",
          "properties": {
            "memory": {
              "type": "string"
            }
          }
        }
      }
    },
    "volumeMounts": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "mountPath": { "type": "string" },
          "subPath": { "type": "string" }
        },
        "required": ["name", "mountPath"]
      }
    },
    "volumes": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "persistentVolumeClaim": {
            "type": "object",
            "properties": {
              "claimName": { "type": "string" }
            },
            "required": ["claimName"]
          }
        },
        "required": ["name", "persistentVolumeClaim"]
      }
    },
    "hostname": {
      "type": "string",
      "default": "nexus"
    },
    "service": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["ClusterIP", "NodePort", "LoadBalancer"],
          "default": "ClusterIP"
        },
        "port": {
          "type": "integer",
          "default": 8081
        }
      },
      "required": ["port"]
    },
    "ingress": {
      "type": "object",
      "properties": {
        "host": {
          "type": "string",
          "default": "nexus.example.com"
        }
      }
    }
  }
}
