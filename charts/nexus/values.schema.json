{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "title": "Helm Nexus Chart Values Schema",
  "description": "Schema for validating values.yaml for the Nexus Helm chart.",
  "type": "object",
  "properties": {
    "nameOverride": {
      "type": "string",
      "description": "Override the name of the chart (used in naming resources)",
      "default": ""
    },
    "fullnameOverride": {
      "type": "string",
      "description": "Override the full name (default is the chart name + release name)",
      "default": ""
    },
    "nexus": {
      "type": "object",
      "description": "Nexus Configuration",
      "properties": {
        "annotations": {
          "type": "object",
          "description": "Metadata annotations for the Nexus deployment",
          "default": {}
        },
        "replicaCount": {
          "type": "integer",
          "description": "Number of replicas/pods to run (should typically be 1)",
          "minimum": 1,
          "default": 1
        },
        "containers": {
          "type": "object",
          "description": "Nexus containers configuration",
          "properties": {
            "nexus": {
              "type": "object",
              "description": "Nexus container configuration",
              "properties": {
                "image": {
                  "type": "object",
                  "properties": {
                    "repository": {
                      "type": "string",
                      "description": "Docker image repository for Nexus",
                      "default": "sonatype/nexus3"
                    },
                    "tag": {
                      "type": "string",
                      "description": "Image tag to use (leave empty to use default from Chart or latest)",
                      "default": ""
                    },
                    "pullPolicy": {
                      "type": "string",
                      "description": "Image pull policy (e.g., Always, IfNotPresent, Never)",
                      "default": "IfNotPresent",
                      "enum": [
                        "Always",
                        "IfNotPresent",
                        "Never"
                      ]
                    }
                  },
                  "required": [
                    "repository",
                    "pullPolicy"
                  ]
                },
                "env": {
                  "type": "array",
                  "description": "Environment variables for Nexus container",
                  "items": {
                    "type": "object",
                    "properties": {
                      "name": {
                        "type": "string"
                      },
                      "value": {
                        "type": "string"
                      }
                    },
                    "required": [
                      "name",
                      "value"
                    ]
                  }
                },
                "resources": {
                  "type": "object",
                  "properties": {
                    "requests": {
                      "type": "object",
                      "properties": {
                        "memory": {
                          "type": "string",
                          "description": "Minimum amount of memory requested for the server container",
                          "default": "4Gi"
                        }
                      }
                    }
                  }
                },
                "volumeMounts": {
                  "type": "array",
                  "description": "Additional volume mounts for the Nexus container",
                  "items": {
                    "type": "object",
                    "properties": {
                      "name": {
                        "type": "string"
                      },
                      "mountPath": {
                        "type": "string"
                      },
                      "subPath": {
                        "type": "string"
                      }
                    }
                  }
                },
                "port": {
                  "type": "integer",
                  "description": "Default port for the Nexus HTTP service (repository manager UI and API)",
                  "default": 8081
                }
              },
              "required": [
                "image",
                "port"
              ]
            }
          },
          "required": [
            "nexus"
          ]
        },
        "hostname": {
          "type": "string",
          "description": "Hostname used for the Nexus pod/container",
          "default": "nexus"
        },
        "volumes": {
          "type": "array",
          "description": "Additional volumes to be mounted into the Nexus pod",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "persistentVolumeClaim": {
                "type": "object",
                "properties": {
                  "claimName": {
                    "type": "string"
                  }
                },
                "required": [
                  "claimName"
                ]
              },
              "secret": {
                "type": "object",
                "properties": {
                  "secretName": {
                    "type": "string"
                  }
                },
                "required": [
                  "secretName"
                ]
              }
            },
            "required": [
              "name"
            ]
          }
        },
        "service": {
          "type": "object",
          "description": "Configuration for the Kubernetes Service exposing Nexus",
          "properties": {
            "type": {
              "type": "string",
              "description": "Kubernetes service type (e.g., ClusterIP, NodePort, LoadBalancer)",
              "enum": [
                "ClusterIP",
                "NodePort",
                "LoadBalancer"
              ]
            },
            "ports": {
              "type": "array",
              "description": "List of ports to expose via the service.",
              "items": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "minimum": 1,
                    "maximum": 65535
                  },
                  "port": {
                    "type": "integer",
                    "minimum": 1,
                    "maximum": 65535
                  },
                  "targetPort": {
                    "type": "integer",
                    "minimum": 1,
                    "maximum": 65535
                  },
                  "protocol": {
                    "type": "string",
                    "enum": [
                      "TCP",
                      "UDP"
                    ]
                  }
                },
                "required": [
                  "name",
                  "port",
                  "targetPort",
                  "protocol"
                ]
              }
            }
          },
          "required": [
            "type",
            "ports"
          ]
        },
        "ingress": {
          "type": "object",
          "description": "Configuration for Ingress to expose Nexus via HTTP/HTTPS",
          "properties": {
            "annotations": {
              "type": "object",
              "description": "Annotations to customize the behavior of the ingress controller"
            },
            "className": {
              "type": "string",
              "description": "Ingress class name (used to select the Ingress controller, e.g., nginx or traefik)",
              "default": "nginx"
            },
            "tls": {
              "type": "array",
              "description": "TLS configuration for the ingress",
              "items": {
                "type": "object",
                "properties": {
                  "hosts": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  },
                  "secretName": {
                    "type": "string"
                  }
                },
                "required": [
                  "hosts",
                  "secretName"
                ]
              }
            },
            "rules": {
              "type": "array",
              "description": "List of rules for the Ingress resource",
              "items": {
                "type": "object",
                "properties": {
                  "host": {
                    "type": "string"
                  },
                  "http": {
                    "type": "object",
                    "properties": {
                      "paths": {
                        "type": "array",
                        "items": {
                          "type": "object",
                          "properties": {
                            "path": {
                              "type": "string"
                            },
                            "pathType": {
                              "type": "string"
                            },
                            "backend": {
                              "type": "object",
                              "properties": {
                                "service": {
                                  "type": "object",
                                  "properties": {
                                    "name": {
                                      "type": "string"
                                    },
                                    "port": {
                                      "type": "object",
                                      "properties": {
                                        "number": {
                                          "type": "integer"
                                        }
                                      },
                                      "required": [
                                        "number"
                                      ]
                                    }
                                  },
                                  "required": [
                                    "name",
                                    "port"
                                  ]
                                }
                              },
                              "required": [
                                "service"
                              ]
                            }
                          },
                          "required": [
                            "path",
                            "pathType",
                            "backend"
                          ]
                        }
                      }
                    },
                    "required": [
                      "paths"
                    ]
                  }
                },
                "required": [
                  "host",
                  "http"
                ]
              }
            }
          }
        }
      },
      "required": [
        "containers"
      ]
    }
  },
  "required": [
    "nexus"
  ]
}